@* File: Views/Admin/Brand.cshtml *@
@model LorKingDom.Models.BrandViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <title>Quản lý Brand</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
</head>
<body class="p-4">

<!-- Nút mở modal -->
<button class="btn btn-primary mb-4"
        data-bs-toggle="modal"
        data-bs-target="#createModal">
    Thêm Brand mới
</button>

<!-- Modal Create -->
<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Brand mới</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="Name" class="form-label">Tên Brand</label>
                        <input type="text" id="Name" name="Name" class="form-control"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Hủy
                    </button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Danh sách và edit/delete -->
<h2>Danh sách Brand</h2>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>ID</th><th>Name</th><th>Hành động</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var b in Model.Brands)
    {
        <tr>
            <td>@b.BrandId</td>
            <td>
                <!-- Form Edit -->
                <form asp-action="Edit" method="post" class="d-flex align-items-center">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@b.BrandId"/>
                    <input type="text" name="Name" value="@b.Name"
                           class="form-control me-2"/>
                    <button type="submit" class="btn btn-success btn-sm me-1">
                        Lưu
                    </button>
                </form>
            </td>
            <td>
                <!-- Form Delete -->
                <form asp-action="Delete" method="post"
                      onsubmit="return confirm('Xác nhận xóa?')">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@b.BrandId"/>
                    <button type="submit" class="btn btn-danger btn-sm">
                        Xóa
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>